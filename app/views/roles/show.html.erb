          <%= image_tag @role.user.photo %>
        <% else %>
          <%= image_tag 'placeholder-profile.png' %>
        <% end %>
      </div>
      <div class="user-bio mx-4">
        <small>About Me</small>
        <p><%= @role.bio %></p>
