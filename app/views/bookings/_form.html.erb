<%= simple_form_for [@role, @booking],
  html: { class: "row row-cols-lg-auto g-3 align-items-center justify-content-center" },
  wrapper_mappings: {
    boolean: :inline_boolean
  } do |f| %>
  <%= f.input :start_time, required: true, label: 'Start Date/Time', as: :string, input_html: {class: "datepicker"} %>
  <%= f.input :end_time, required: true, label: 'Finish Date/Time', as: :string, input_html: {class: "datepicker"} %>
  <%= f.input :location, required: true, label: 'Location' %>
  <%= f.input :category, required: true, label: 'Event' %>
  <%= f.submit "Book Me", class: "btn-warning col-xs-12 col-sm-12 col-md-12 col-lg-6 p-2 rounded-pill", style: "font-weight: bold; font-size: 20px;" %>
<% end %>
