<%= simple_form_for [@role, @booking],
  wrapper: :inline_form,
  html: { class: "row row-cols-lg-auto g-3 align-items-center" },
  wrapper_mappings: {
    boolean: :inline_boolean
  } do |f| %>
  <%= f.input :start_time %>
  <%= f.input :end_time %>
  <%= f.input :location %>
  <%= f.input :category %>
  <div class="col-12">
    <%= f.button :submit, class: "btn-primary" %>
  </div>
<% end %>
