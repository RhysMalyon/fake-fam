<%= simple_form_for [@role, @booking],
  html: { class: "row row-cols-lg-auto g-3 align-items-center justify-content-center" },
  wrapper_mappings: {
    boolean: :inline_boolean
  } do |f| %>
  <%= f.input :start_time, label: 'Start time', as: :string, input_html: {class: "datepicker"} %>
  <%= f.input :end_time, label: 'Finish time', as: :string, input_html: {class: "datepicker"} %>
  <%= f.input :location, label: 'Location' %>
  <%= f.input :category, label: 'Event' %>
  <%= f.button :submit, value: "Book me", class: "btn-primary col-xs-12 col-sm-12 col-md-12 col-lg-6" %>
<% end %>
